@model Appli.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release: @(Model.ReleaseDate.ToShortDateString())</li>
    <li>Added: @(Model.DateAdded.ToShortDateString())</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

